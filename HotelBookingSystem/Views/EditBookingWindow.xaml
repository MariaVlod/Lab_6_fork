<Window x:Class="HotelBookingSystem.Views.EditBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Booking" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Room ID:" Grid.Row="0"/>
        <TextBox x:Name="RoomIdTextBox" Grid.Row="0" Margin="100,0,0,5" Width="200"/>

        <Label Content="Check-In Date:" Grid.Row="1"/>
        <DatePicker x:Name="CheckInDatePicker" Grid.Row="1" Margin="100,0,0,5" Width="200"/>

        <Label Content="Check-Out Date:" Grid.Row="2"/>
        <DatePicker x:Name="CheckOutDatePicker" Grid.Row="2" Margin="100,0,0,5" Width="200"/>

        <Button Content="Save" Grid.Row="4" Width="80" Height="30" HorizontalAlignment="Right"
                Margin="0,10,0,0" Click="Save_Click"/>
    </Grid>
</Window>
