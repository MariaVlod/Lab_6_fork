<Window x:Class="HotelBookingSystem.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,5"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5"/>

            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <Button Content="Register" Width="100" Margin="0,15,0,0" HorizontalAlignment="Right" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
